html(lang="ru")
  head
    meta(charset="utf-8")
    link(rel="stylesheet", href="style.css")
    title= 'login'
    
  body
    form(action="http://localhost:3000/login/request" style="display:flex;flex-direction:column;align-items:center;justify-content:center" method="post" enctype="application/x-www-form-urlencoded") 
        p()='Пройдите регистрацию если нет аккаунта по ссылке /register'
        input(name='email' style="width:20%;" type="email")
        p(style='margin-bottom:20px')='email'
        input(name='password' type="password" style="width:20%;")
        p(style='margin-bottom:20px')='password'
        button(type="submit")="логин" 